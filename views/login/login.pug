  body
  block content
  if errors 
    each error in errors
      .alert.alert-danger = error
.limiter
  .container-login100
    .wrap-login100.p-t-90.p-b-30
      form(action='logintest', method='POST').login100-form.validate-form
        span.login100-form-title.p-b-40
          | Login
        div
          a.btn-login-with.bg1.m-b-10(href='/facebook/auth/facebook')
            i.fa.fa-facebook-official
            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Login with Facebook
          a.btn-login-with.bg2(href='/google/auth/google')
            i.fa.fa-twitter
            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Login with Google
        .text-center.p-t-55.p-b-30
          span.txt1
            | Login with email
        .wrap-input100.validate-input.m-b-16(data-validate='Please enter email: ex@abc.xyz')
          input.input100(type='text', name='username', placeholder='Email',value=values?values.email:'')
          span.focus-input100
        .wrap-input100.validate-input.m-b-20(data-validate='Please enter password')
          span.btn-show-pass
            i.fa.fa.fa-eye
          input.input100(type='password', name='password', placeholder='Password',value=values?values.passowrd:'')
          span.focus-input100
        .container-login100-form-btn
          button.login100-form-btn
            | Login
        .flex-col-c.p-t-224
          span.txt2.p-b-10
            | Don&rsquo;t have an account?
          a.txt3.bo1.hov1(href='#')
            | Sign up now
